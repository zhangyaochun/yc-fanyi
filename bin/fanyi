#!/usr/bin/env node


//read process.argv
if (!process.argv[2]) {
  console.log('yc fanyi ~ ' + require('../package.json').version.green);

  console.log('It is a fanyi tool in yc lib for command line'.grey);
  
  console.log('  $ '.cyan + 'fanyi someword');

  return;
}

var tool = require('../index');

tool.fanyi(process.argv.slice(2).join(' '));
