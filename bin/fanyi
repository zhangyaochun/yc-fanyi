#!/usr/bin/env node

//use colorful's toxic mix string object
require('colorful').toxic();

//read process.argv
if (!process.argv[2]) {
  console.log('yc fanyi ~ ' + require('../package').version.green);

  console.log('It's a yc fanyi tool in command line'.grey);
  
  console.log('  $ '.cyan + 'fanyi someword');

  return;
}

var tool = require('../index');

tool.fanyi(process.argv.slice(2).join(' '));
